<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dip"
    android:padding="6dp" android:orientation="horizontal" android:background="@color/background_material_dark">

    <TextView android:id="@+id/group_item_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="4dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentEnd="true"
        android:text="5.11.2015" />

    <ImageView android:id="@+id/group_item_drink_event_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/group_item_date_text"
        android:layout_alignStart="@id/group_item_date_text"
        android:layout_marginEnd="4dp"
        android:src="@drawable/bottle" />

    <TextView android:id="@+id/group_item_drink_event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_item_drink_event_icon"
        android:layout_alignBottom="@id/group_item_drink_event_icon"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="150 ml" />

    <ImageView android:id="@+id/group_item_eat_event_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/group_item_date_text"
        android:layout_toRightOf="@id/group_item_drink_event_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/eat" />

    <TextView android:id="@+id/group_item_eat_event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_item_eat_event_icon"
        android:layout_alignBottom="@id/group_item_eat_event_icon"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="200 g" />

    <ImageView android:id="@+id/group_item_sleep_event_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/group_item_date_text"
        android:layout_toRightOf="@id/group_item_eat_event_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/sleep" />

    <TextView android:id="@+id/group_item_sleep_event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_item_sleep_event_icon"
        android:layout_alignBottom="@id/group_item_sleep_event_icon"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="200 g" />

</RelativeLayout>